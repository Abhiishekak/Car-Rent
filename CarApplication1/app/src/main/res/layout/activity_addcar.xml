<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cheveroletcopocamero"
    android:alpha="0.4"
    android:paddingLeft="10dp"
    android:orientation="vertical"
    tools:context=".addcar">

    <EditText
        android:id="@+id/etname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center_horizontal|center_vertical"
        android:hint="ENTER CAR NAME"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textColor="@color/colorSecondaryText"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="37dp" />

    <EditText
        android:id="@+id/etcontact"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center_horizontal|center_vertical"
        android:hint="ENTER CONTACT NUMBER"
        android:inputType="phone"
        android:padding="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:textColor="@color/colorSecondaryText"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="148dp" />

    <EditText
        android:id="@+id/etfromloc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center_horizontal|center_vertical"
        android:hint="ENTER PICK UP LOCATION"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:textColor="@color/colorSecondaryText"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="237dp" />

    <EditText
        android:id="@+id/ettoloc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center_horizontal|center_vertical"
        android:hint="ENTER DESTINATION"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:textColor="@color/colorSecondaryText"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="341dp" />

    <EditText
        android:id="@+id/etreg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center_horizontal|center_vertical"
        android:hint="ENTER REG NO."
        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:textColor="@color/colorSecondaryText"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="447dp" />

    <Button
        android:id="@+id/btadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="120dp"
        android:background="@color/colorPrimaryDark"
        android:shadowColor="#00865B5B"
        android:text="ADD CAR"
        android:textColor="#ffffff"
        android:textColorHint="#A53EAD"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="516dp" />

</LinearLayout>